<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_outline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_outline_width"
        android:layout_marginRight="@dimen/dialog_outline_width"
        android:layout_marginTop="@dimen/dialog_outline_width"
        android:background="@drawable/dialog_header_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvScanSealTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dialog_header_title_text_spacing"
            android:paddingTop="@dimen/dialog_header_title_text_spacing"
            android:text="SCAN BOTTOM SEAL"
            android:textStyle="bold"
            android:textSize="@dimen/header_title_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_outline_width"
        android:layout_marginLeft="@dimen/dialog_outline_width"
        android:layout_marginRight="@dimen/dialog_outline_width"
        android:background="@drawable/dialog_content_bg"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnScanMoreSeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dialog_content_left_right_spacing"
            android:layout_marginRight="@dimen/dialog_content_left_right_spacing"
            android:layout_marginTop="@dimen/dialog_content_left_right_spacing"
            android:text="SCAN MORE SEALS"
            android:textSize="@dimen/default_app_text" />

        <TextView
            android:id="@+id/tvSeal1"
            android:layout_width="@dimen/dialog_textview_width"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/summary_spacing"
            android:textSize="17dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="@dimen/summary_spacing"
            android:background="@drawable/dialog_outline"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tvSeal2"
            android:layout_width="@dimen/dialog_textview_width"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/summary_spacing"
            android:textSize="17dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="@dimen/summary_spacing"
            android:background="@drawable/dialog_outline"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tvSeal3"
            android:layout_width="@dimen/dialog_textview_width"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/summary_spacing"
            android:textSize="17dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="@dimen/summary_spacing"
            android:background="@drawable/dialog_outline"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tvSeal4"
            android:layout_width="@dimen/dialog_textview_width"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/summary_spacing"
            android:textSize="17dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="@dimen/summary_spacing"
            android:background="@drawable/dialog_outline"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dialog_content_left_right_spacing"
            android:layout_marginTop="@dimen/dialog_content_left_right_spacing"
            android:layout_marginLeft="@dimen/dialog_content_left_right_spacing"
            android:layout_marginRight="@dimen/dialog_content_left_right_spacing"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="OK"
                android:textSize="@dimen/default_app_text" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dialog_header_content_spacing"
                android:layout_weight="1"
                android:text="Cancel"
                android:textSize="@dimen/default_app_text" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>