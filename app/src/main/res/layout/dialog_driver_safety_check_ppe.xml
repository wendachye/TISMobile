<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_outline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_outline_width"
        android:layout_marginRight="@dimen/dialog_outline_width"
        android:layout_marginTop="@dimen/dialog_outline_width"
        android:background="@drawable/dialog_header_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvProductNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dialog_header_title_text_spacing"
            android:paddingTop="@dimen/dialog_header_title_text_spacing"
            android:text="PRODUCT PPE"
            android:textStyle="bold"
            android:textSize="@dimen/header_title_text" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_content_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPPEProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ppe_border_width"
                    android:layout_marginTop="@dimen/ppe_border_width"
                    android:layout_marginLeft="@dimen/dialog_content_left_right_spacing"
                    android:layout_marginRight="@dimen/dialog_content_left_right_spacing"
                    android:text="Product Name"
                    android:textStyle="bold"
                    android:textSize="@dimen/default_app_text" />

            </LinearLayout>

            <TextView
                android:id="@+id/hDivider1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_width"
                android:background="@color/colorBlack" />

            <LinearLayout
                android:id="@+id/linearLayoutGHS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dialog_content_left_right_spacing"
                android:layout_marginRight="@dimen/dialog_content_left_right_spacing"
                android:layout_marginTop="@dimen/dialog_content_top_bottom_spacing"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHandleProduct"
                    android:layout_width="@dimen/dialog_textview_width"
                    android:layout_height="wrap_content"
                    android:text="I can handle product"
                    android:textSize="@dimen/default_app_text" />

                <RadioButton
                    android:id="@+id/rbtnHandleProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/hDivider2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_width"
                android:background="@color/colorBlack" />

            <LinearLayout
                android:id="@+id/linearLayoutPPE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dialog_content_left_right_spacing"
                android:layout_marginRight="@dimen/dialog_content_left_right_spacing"
                android:layout_marginTop="@dimen/dialog_content_top_bottom_spacing"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHavePPE"
                    android:layout_width="@dimen/dialog_textview_width"
                    android:layout_height="wrap_content"
                    android:text="I have the correct PPE"
                    android:textSize="@dimen/default_app_text" />

                <RadioButton
                    android:id="@+id/rbtnHavePPE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/hDivider4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_width"
                android:background="@color/colorBlack" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dialog_content_left_right_spacing"
                android:orientation="horizontal"
                android:background="@drawable/dialog_content_bg">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textSize="@dimen/default_app_text" />

                <Button
                    android:id="@+id/btnConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text="OK"
                    android:textSize="@dimen/default_app_text" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>